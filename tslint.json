{
  "defaultSeverity": "error",
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-config-airbnb"
  ],
  "rules": {
    "max-line-length": [
      true,
      240
    ],
    "jsx-wrap-multiline": false,
    "ter-arrow-parens": false,
    "no-increment-decrement": false,
    "trailing-comma": false,
    "align": false,
    "jsx-no-lambda": false,
    "jsx-no-bind": true,
    "indent": [
      true,
      "spaces",
      4
    ],
    "ter-indent": [
      true,
      4,
      {
        "SwitchCase": 1
      }
    ]
  }
}
