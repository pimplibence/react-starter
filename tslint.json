{
  "defaultSeverity": "error",
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-config-airbnb"
  ],
  "rules": {
    "max-line-length": [
      true,
      240
    ],
    "jsx-wrap-multiline": false,
    "trailing-comma": false,
    "align": false,
    "indent": [
      true,
      "spaces",
      4
    ],
    "ter-indent": [
      true,
      4
    ]
  }
}
